<%= form_for(@sustancia_quimica) do |f| %>
  <% if @sustancia_quimica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sustancia_quimica.errors.count, "error") %> prohiben esta sustancia quimica de ser guardada:</h2>

      <ul>
      <% @sustancia_quimica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :pureza %><br>
    <%= f.text_field :pureza %>
  </div>
  <div class="field">
    <%= f.label :estado_materia %><br>
    <%= f.select(:estado_materia, [['Solido'], ['Liquido'], ['Gaseoso'] ] ) %>
  </div>
  <div class="field">
    <%= f.label :controlado %><br>
    <%= f.select(:controlado, [['Si'], ['No']] ) %>
  </div>
  <div class="field">
    <%= f.label :regimen_legal %><br>
        <br>
    <%= f.check_box :RI7 %>
    <%= 'RI7' %><br>
    <%= f.check_box :RI4 %>
    <%= 'RI4' %><br>
  </div>
  <div class="field">
    <%= f.label :cantidad %><br>
    <%= f.number_field(:cantidad, min: 0) %>
  </div>
  <div class="field">
    <%= f.label :CAS %><br>
    <%= f.text_field :CAS %>
  </div>



  <div class="field">
    <%=  'Uso' %><br>
   <br>
   <%= f.check_box :Investigacion2 %>
    <%= f.label :Investigacion2 %><br>
    <%= f.check_box :Docencia2 %>
    <%= f.label :Docencia2 %><br>
    <%= f.check_box :Extension2 %>
    <%= f.label :Extension2 %><br>
    <%= f.check_box :Gestion2 %>
    <%= f.label :Gestion2 %><br>
   </div>



  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, [['Vigente'], ['Vencido'], ['Indeterminado']] ) %>
  </div>
  <div class="field">
    <%= f.label :responsable %><br>
    <%= f.text_field :responsable %>
  </div>
  <div class="field">
    <%= f.label :ubicacion %><br>
    <%= f.text_field :ubicacion %>
  </div>
  <div class="field">
    <%= f.label :caducidad %><br>
    <%= f.date_select :caducidad %>
  </div>
  <div class="field">
    <%= f.label :peligro %><br>
    <br>
    <%= f.check_box :Toxico %>
    <%= f.label :Toxico %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.check_box :Inflamable %>
    <%= f.label :Inflamable %><br>
    <%= f.check_box :Comburente %>
    <%= f.label :Comburente %>
    <%= f.check_box :Corrosivo %>
    <%= f.label :Corrosivo %><br>
    <%= f.check_box :Explosivo %>
    <%= f.label :Explosivo %>
    &nbsp;&nbsp;&nbsp;
    <%= f.check_box :Nocivo %>
    <%= f.label :Nocivo %><br>
    <%= f.check_box :Irritante %>
    <%= f.label :Irritante %><br>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
