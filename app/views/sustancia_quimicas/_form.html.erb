<%= form_for(@sustancia_quimica) do |f| %>
  <% if @sustancia_quimica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sustancia_quimica.errors.count, "error") %> prohiben esta sustancia quimica de ser guardada:</h2>

      <ul>
      <% @sustancia_quimica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :pureza %><br>
    <%= f.text_field :pureza %>
  </div>
  <div class="field">
    <%= f.label :estado_materia %><br>
    <%= f.select(:estado_materia, [['Solido'], ['Liquido'], ['Gaseoso'] ] ) %>
  </div>
  <div class="field">
    <%= f.label :controlado %><br>
    <%= f.select(:controlado, [['Si'], ['No']] ) %>
  </div>
  <div class="field">
    <%= f.label :regimen_legal %><br>
    <%= f.select(:controlado, [['RL4'], ['RL7']] ) %>
  </div>
  <div class="field">
    <%= f.label :cantidad %><br>
    <%= f.number_field(:cantidad, min: 0) %>
  </div>
  <div class="field">
    <%= f.label :CAS %><br>
    <%= f.text_field :CAS %>
  </div>
  <div class="field">
    <%= f.label :uso %><br>
    <%= f.select(:uso, options_for_select(["Investigacion", "Docencia", "Extension", "Gestion"])) %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, [['Buen estado'], ['Danado'] ] ) %>
  </div>
  <div class="field">
    <%= f.label :responsable %><br>
    <%= f.text_field :responsable %>
  </div>
  <div class="field">
    <%= f.label :ubicacion %><br>
    <%= f.text_field :ubicacion %>
  </div>
  <div class="field">
    <%= f.label :caducidad %><br>
    <%= f.date_select :caducidad %>
  </div>
  <div class="field">
    <%= f.label :peligro %><br>
    <%= f.text_field :peligro %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
