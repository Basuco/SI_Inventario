<%= form_for(@herramientum) do |f| %>
  <% if @herramientum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@herramientum.errors.count, "error") %> prohibited this herramientum from being saved:</h2>

      <ul>
      <% @herramientum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :marca %><br>
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.text_field :tipo %>
  </div>
  <div class="field">
    <%= f.label :no_bien_nac %><br>
    <%= f.number_field(:no_bien_nac, min: 0) %>
  </div>
  <div class="field">
    <%= f.label :estado %><br>
    <%= f.select(:estado, [['Operativo'], ['Inoperativo'], ['Desuso'],['Reservado'] ] ) %>
  </div>
  <div class="field">
    <%= f.label :uso %><br>
    <%= f.select(:uso, [['Investigacion'], ['Docencia'], ['Extension'],['Gestion']], { :multiple => true, :size => 5 } ) %>
  </div>
  <div class="field">
    <%= f.label :responsable %><br>
    <%= f.text_field :responsable %>
  </div>
  <div class="field">
    <%= f.label :ubicacion %><br>
    <%= f.text_field :ubicacion %>
  </div>
  <div class="field">
    <%= f.label :material %><br>
    <%= f.text_field :material %>
  </div>
  <div class="field">
    <%= f.label :factura %><br>
    <%= f.text_field :factura %>
  </div>
  <div class="field">
    <%= f.label :de_un_juego %><br>
    <%= f.check_box :de_un_juego %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
