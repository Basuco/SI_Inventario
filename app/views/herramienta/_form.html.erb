<%= form_for(@herramientum) do |f| %>
  <% if @herramientum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@herramientum.errors.count, "error") %> prohiben esta herramienta de ser guardada:</h2>

      <ul>
      <% @herramientum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :marca %><br>
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.text_field :tipo %>
  </div>
  <div class="field">
    <%= f.label :no_bien_nac %><br>
    <%= f.number_field(:no_bien_nac, min: 0) %>
  </div>
  <div class="field">
    <%= f.label :estado %><br>
    <%= f.select(:estado, [['Buen estado'], ['Danado'] ] ) %>
  </div>
  <div class="field">
    <%= f.label :uso %><br>
    <br>
    <%= check_box_tag 'herramienta_uso[]', 'Investigacion' %>
    <%= f.label :Investigacion %><br>
    <%= check_box_tag 'herramienta_uso[]', 'Docencia' %>
    <%= f.label :Docencia %><br>
    <%= check_box_tag 'herramienta_uso[]', 'Extension' %>
    <%= f.label :Extension %><br>
    <%= check_box_tag 'herramienta_uso[]', 'Gestion' %>
    <%= f.label :Gestion %><br>
  </div>
  <div class="field">
    <%= f.label :responsable %><br>
    <%= f.text_field :responsable %>
  </div>
  <div class="field">
    <%= f.label :ubicacion %><br>
    <%= f.text_field :ubicacion %>
  </div>
  <div class="field">
    <%= f.label :material %><br>
    <%= f.text_field :material %>
  </div>
  <div class="field">
    <%= f.label :factura %><br>
    <%= f.text_field :factura %>
  </div>
  <div class="field">
    <%= f.label :de_un_juego %><br>
    <%= f.check_box :de_un_juego %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
