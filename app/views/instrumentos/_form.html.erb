    <%= f.label :marca %><br>
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :modelo %><br>
    <%= f.text_field :modelo %>
  </div>
  <div class="field">
    <%= f.label :unidad_medida %><br>
    <%= f.text_field :unidad_medida %>
  </div>
  <div class="field">
    <%= f.label :capacidad %><br>
    <%= f.text_field :capacidad %>
  </div>
  <div class="field">
    <%= f.label :material %><br>
    <%= f.text_field :material %>
  </div>
  <div class="field">
    <%= f.label :uso %><br>
    <%= f.select(:uso, options_for_select(["Investigacion", "Docencia", "Extension", "Gestion"])) %>
